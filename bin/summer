#!/usr/bin/env node
require('babel-register');

// Sets the paths for absolute requires
const path = require('path');
process.env.NODE_PATH = [
	path.join(__dirname, '..', 'lib')
].join(':');
// Resets the module paths
require('module').Module._initPaths();

const StdIO = require('jarvis/interface/ios').StdIO;
const Instance = require('jarvis/instance').default;

const io = new StdIO();
const jarvis = new Instance(io, 'Summer');

jarvis.on('close', () => process.exit(0));
jarvis.start();
