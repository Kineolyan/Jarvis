{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "declaration": false,
        "removeComments": true,
        "moduleResolution": "node"
    },
    "filesGlob": [
        "lib/**/*.ts",
        "!lib/**/*.spec.ts",
        "!node_modules/**"
    ],
    "files": [
        "lib/jarvis.ts",
        "lib/jarvis/Instance.ts",
        "lib/jarvis/interface/Dialog.ts",
        "lib/jarvis/interface/IOs.ts",
        "lib/jarvis/jobs/ExecJob.ts",
        "lib/jarvis/jobs/JobManager.ts",
        "lib/jarvis/parser/Interpreter.ts",
        "lib/jarvis/parser/Rule.ts",
        "lib/jarvis/storage/Store.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
