{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "removeComments": false,
        "rootDir": "./lib",
        "strictNullChecks": true,
        "target": "es6"
    },
    "include": [
        "./lib/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "**/*.spec.ts"
    ],
    "atom": {
        "rewriteTsconfig": false,
        "compileOnSave": false
    }
}
